<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_Item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ff99cccc"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_ProgramTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tv_ProgramTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Teacher"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_ProgramTitle"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_ProgramDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Description"
                android:textSize="16sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_ProgramTeacher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_ProgramTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Time"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_ProgramTeacher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>